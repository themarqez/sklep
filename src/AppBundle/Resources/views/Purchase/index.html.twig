{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Lista zamówień</h1>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Data</th>
                <th>Film</th>
                <th>Akcja</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('purchase_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    {{ entity.movie.title }}
                </td>
                <td>
               
                        <a href="{{ path('purchase_show', { 'id': entity.id }) }}">Pokaz szczegóły</a>
                  
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
